{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "[%(asctime)s] %(levelname)s [%(filename)s.%(funcName)s:%(lineno)d] %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "stdout_logger": {
      "formatter": "standard",
      "class": "logging.StreamHandler"
    }
  },
  "loggers": {
    "": {
      "level": "DEBUG",
      "handlers": ["stdout_logger"],
      "propagate": false
    }
  }
}
